<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lizejun.repoglidelearn.PlaceHolderErrorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="loadHolder"
        android:text="load_holder"
        style="@style/style_tv_normal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="loadHolderError"
        android:text="load_holder_error"
        style="@style/style_tv_normal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="loadCustomCrossFade"
        android:text="load_custom_cross_fade"
        style="@style/style_tv_normal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="loadNoCrossFade"
        android:text="load_no_cross_fade"
        style="@style/style_tv_normal"/>
    <ImageView
        android:id="@+id/iv_result"
        android:scaleType="center"
        android:layout_width="300dp"
        android:layout_height="300dp" />
</LinearLayout>
