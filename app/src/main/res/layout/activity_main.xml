<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lizejun.repoglidelearn.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/style_tv_normal"
        android:text="BaseDemo"
        android:onClick="clickBaseDemo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/style_tv_normal"
        android:text="PlaceHolderDemo"
        android:onClick="clickPlaceHolderDemo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/style_tv_normal"
        android:text="OverrideDemo"
        android:onClick="clickOverrideDemo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/style_tv_normal"
        android:text="ThumbnailDemo"
        android:onClick="clickThumbnailDemo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/style_tv_normal"
        android:text="TargetDemo"
        android:onClick="clickTargetDemo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/style_tv_normal"
        android:text="TransformDemo"
        android:onClick="clickTransformDemo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/style_tv_normal"
        android:text="AnimateDemo"
        android:onClick="clickAnimateDemo"/>
</LinearLayout>
